{{!-- create buttons here that will submit the users input  --}}

<img src="assets/img/burgerpic.png" alt="burger pic">
<h1>Eat-Da-Burger!</h1>
<p>Enter a burger you want to eat Click the "Submit" button</p>

{{!-- new burgers or current burgers in db --}}

<ul id="list1">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
</ul>

{{!-- burgers that were devoured in db --}}

<ul id="list2">
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
</ul>

{{!-- form and button for adding burger! --}}
<form class="create-form">

    <div class="form-group">
        <label for="br"></label>
        <input type="text" id="br" name="name">
    </div>

    <button type="submit" id="newb">Submit</button>
</form>

